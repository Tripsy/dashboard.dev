{
	"compilerOptions": {
		"jsx": "react-jsx",
		"baseUrl": "src",
		"paths": {
			"@/*": ["./*"]
		},
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"lib": ["dom", "dom.iterable", "esnext"],
		"strict": true,
		"noEmit": true,
		"isolatedModules": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"plugins": [{ "name": "next" }]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
